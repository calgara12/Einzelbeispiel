<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="582dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="101dp"
        android:text="Send"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/lblResponse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Response from Server"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="238dp" />

    <TextView
        android:id="@+id/lblEnterNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your matriculation number:"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="103dp" />

    <EditText
        android:id="@+id/tbInputNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="ex: 01214798"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="139dp" />
</androidx.constraintlayout.widget.ConstraintLayout>